    "version": "0.3.2",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "hostname": "127.0.0.1",
            "stopOnEntry": true,
            "pathMappings": {
                "/var/www/html/pred-stream-overlay_dev": "${workspaceRoot}"
            },
            "env": {
                "XDEBUG_MODE": "debug",
                "XDEBUG_TRIGGER": "PHPSTORM_TRIGGER"
            }
        }
    ]
}